@using BGTATKO.Common
@model BGTATKO.Web.ViewModels.Categories.ListCategoriesViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="card-group">
        @foreach (var category in Model.Categories)
        {
            <li class="media my-4 border border-secondary rounded">
                <a asp-controller="Categories" asp-action="ById" asp-route-id="@category.Id"><img class="mr-3" width="150" height="170" src="@category.ImageUrl" alt="@category.Name"></a>
                <div class="media-body">
                    <h5 class="mt-0 mb-1"><a asp-controller="Categories" asp-action="ById" asp-route-id="@category.Id">@category.Name</a></h5>
                    <p>@category.ShortDescription</p>
                </div>
                <div class="d-flex flex-row justify-content-end mt-1 mx-2">
                    <form asp-controller="Categories" asp-action="Edit" method="get" class="mx-1">
                        <input type="hidden" name="Id" asp-for="@category.Id" />
                        <button class="btn btn-success btn-sm">Edit</button>
                    </form>
                    <form asp-controller="Categories" asp-action="Delete" method="post" class="mx-1">
                        <input type="hidden" name="Id" asp-for="@category.Id" />
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </li>}
        }
    </div>
</div>
