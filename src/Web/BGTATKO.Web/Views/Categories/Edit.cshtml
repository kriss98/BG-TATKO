@model BGTATKO.Web.ViewModels.Categories.EditCategoryInputModel
@{
    this.ViewData["Title"] = "Edit Category";
}

<div class="col-md-6 text-center mx-auto">
    <h1>@this.ViewData["Title"]</h1>
    <form method="post">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" placeholder="Name..." />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control" placeholder="Description..."></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="font-weight-bold" asp-for="@Model.ImageUrl"></label>
            <input asp-for="@Model.ImageUrl" class="form-control" placeholder="Image url..." />
            <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
        </div>
        <hr />
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>