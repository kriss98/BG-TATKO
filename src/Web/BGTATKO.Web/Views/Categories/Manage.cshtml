@model BGTATKO.Web.ViewModels.Categories.ManageCategoriesViewModel
@{ this.ViewData["Title"] = "Manage Categories"; }

<div class="text-center">
    <h1 class="display-4">@this.ViewData["Title"]</h1>
</div>
<ul class="list-unstyled">
    @foreach (var category in Model.Categories)
    {
        <li class="media my-4 border border-10 border-secondary rounded bg-secondary text-white">
            <a asp-controller="Categories" asp-action="ById" asp-route-id="@category.Id"><img class="mr-3" width="100" height="100" src="@category.ImageUrl" alt="@category.Name"></a>
            <div class="media-body">
                <h5 class="mt-0 mb-1"><a asp-controller="Categories" asp-action="ById" asp-route-id="@category.Id">@category.Name</a></h5>
                <p>@category.ShortDescription</p>
            </div>
            <div class="d-flex flex-row justify-content-end mt-1 mx-2">
                <form asp-controller="Categories" asp-action="Edit" method="get" class="mx-1">
                    <input type="hidden" name="Id" asp-for="@category.Id" />
                    <button class="btn btn-success btn-sm">Edit</button>
                </form>
                <form asp-controller="Categories" asp-action="Delete" method="post" class="mx-1">
                    <input type="hidden" name="Id" asp-for="@category.Id" />
                    <button class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </li>
}
</ul>